body {
  background: image-url("main_background.png") no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src="<%= asset_path 'main_background.png' %>", sizingMethod='scale');
  -ms-filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src="<%= asset_path 'main_background.png' %>", sizingMethod='scale');
  position: relative;
}

#menu {
  width: 1024px;
  height: 100px;
  margin: 0 auto;
  display: block;
}

#menu-top-bar {
  margin-top: 20px;
  padding-left: 65px;
  width: 175px;
}

#menu-buttons {
  margin-top: 55px;
  float: right;
  width: 500px;
}

#menu p{
  float: right;
  width: 110px;
  height: 47px;
  margin: 0px;
  padding: 0 3px;
  position: relative;
  bottom: 0;
  background-repeat: no-repeat;
}

#menu p a {
  display: block;
  width: 100%;
  height: 30px;
  margin-left: -2px;
}

