  <%= yield :head %>
  <script type="text/javascript">
    var apiKey = '';
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', apiKey]);
    _gaq.push(['_setDomainName', 'sloogd.com']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  </script>
  <%= yield :scripts %>
</head>

<body id="admin-body" class="<%= controller_name %>-controller <%= action_name %>-action">
  <%= image_tag("main_background.png", class: "background-image") %>
  <header>
    <section>
      <a id="top"></a>
      <%= render :partial => "shared/admin_header" %>
      <%= yield :head %>
    </section>
  </header>

  <section id="wrapper">
    <%= yield %> <!--! end of #container -->
  </section>

  <%= render partial: "shared/footer" %>

</body>
</html>
