<section class="main">
  <div id="left-sidebar">
    <%= image_tag "circle.png", id: 'circle' -%>
    <%= image_tag "circle-images/urzadzenia.png", alt: 'devices', class: 'main-image hidden' %>
    <%= image_tag "circle-images/lokalizacje.png", alt: 'localization', class: 'main-image active' %>
    <%= image_tag "circle-images/wspolpraca.png", alt: 'cooperation', class: 'main-image hidden' %>
  </div>
  <div id="subheader">
    <%= image_tag "devices_main_line.png", alt: 'localization line', id: 'main-line' -%>
    <%= image_tag "dot.png", alt: 'dot', id: 'dot' -%>
    <div class="submenu-buttons">
      <p id="lokalizacje-button" class="active" img-data="localization">
        <%= link_to "", localization_page_path, :class=>"left"  %>
      </p>
      <p id="wspolpraca-button" img-data="cooperation">
        <%= link_to "", cooperation_page_path, :class=>"middle"  %>
      </p>
    </div>
    <%= image_tag "submenu_line_left.png", alt: 'left line', id: 'left-line', class: "active-line" -%>
    <%= image_tag "submenu_line_middle.png", alt: 'middle line', id: 'middle-line' -%>
  </div>
  <div id="content">
    <p class="map-info">
      Na mapie poniżej rozmieszczono lokalizacje punktów wyposażonych w urządzenia "BLUE CHECK POINT" wraz z dokładnym
    adresem.
    </p>

    <%= image_tag "mapa.png", alt: 'map', id: 'map' %>
  </div>
</section>



